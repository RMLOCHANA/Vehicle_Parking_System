@model IEnumerable<int>

@if (Model.Count() > 0)
{
    <nav id="divPagination" aria-label="Page navigation">
        <ul class="pagination pagination-sm justify-content-end">

            <li class="page-item">
                <a class="page-link" onclick="PagePrev()" href="javascript: void(0);">
                    <i data-feather="chevron-left"></i>
                </a>
            </li>

            @foreach (var pageNum in Model)
            {
                <li id="pg_@pageNum" class="page-item @(pageNum == 1 ? "active" : "")">
                    <a class="page-link" onclick="PageJump(@pageNum)" href="javascript: void(0);">@pageNum</a>
                </li>
            }

            <li class="page-item">
                <a class="page-link" onclick="PageNext()" href="javascript: void(0);">
                    <i data-feather="chevron-right"></i>
                </a>
            </li>

            <li class="page-item ">
                <a class="page-link" onclick="ShowAll()" href="javascript: void(0);">
                    All
                </a>
            </li>
        </ul>
    </nav>
}


